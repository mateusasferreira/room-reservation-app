<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Solicitante</th>
      <th>Data</th>
      <th>Solicitante</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.solicitante %></td>
        <td><%= reserva.data %></td>
        <td><%= reserva.descricao %></td>

        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% today = Date.today %>
<% days_of_week = (today.beginning_of_week..(today.end_of_week(start_day = Date.beginning_of_week) - 2)).to_a %>

<table class="table">
  <thead>
    <th>horários</th>
    <% days_of_week.each do |day| %>
     <th><%= day.strftime("%A") %></th>

    <% end %>
  </thead>
  <tbody>
    <% for i in 6..23 do%>
      <tr>
        <th scope="row"> <%= "#{i.to_s}:00" %> </th>
        <% days_of_week.each do |day| %>
          <%slot = day.to_time.advance(hours: i)%>
          
          <td> 
          <%reserva = @reservas.find_by(data: slot)%>
          
          <% if reserva%>

            <span>Reservado para: <%=reserva.solicitante%></span>
            <% if (reserva.user_id == current_user.id)%>
              <%= link_to 'Desfazer', reserva, method: :delete, data: { confirm: 'Are you sure?' }%>
            <%end%>

          <%else%>

            <% if (slot > Time.now) %>
              <%= link_to 'Disponível', new_reserva_path(data: slot) %>
            <% end %>

          <%end%>
          </td>

        <% end%>
      </tr>
    <% end %>
  
  </tbody>

</table>

<br>

