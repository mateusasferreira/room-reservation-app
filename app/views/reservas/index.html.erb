<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Solicitante</th>
      <th>Data</th>
      <th>Solicitante</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.solicitante %></td>
        <td><%= reserva.data %></td>
        <td><%= reserva.descricao %></td>

        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% today = Date.today %>
<% days_of_week = (today.beginning_of_week..(today.end_of_week(start_day = Date.beginning_of_week) - 2)).to_a %>

<table class="table">
  <thead>
    <th>horários</th>
    <% days_of_week.each do |day| %>
     <th><%= day.strftime("%A") %></th>

    <% end %>
  </thead>
  <tbody>
    <% for i in 6..23 do%>
      <tr>
        <th scope="row"> <%= "#{i.to_s}:00" %> </th>
        <% days_of_week.each do |day| %>
        <td> 
        
        <% if (day.to_time.advance(hours: i) > Time.now) %>
          <%= link_to 'Disponível', new_reserva_path %>
        <% end %>        
        
        </td>

        <% end%>
      </tr>
    <% end %>
  
  </tbody>

</table>

<br>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
