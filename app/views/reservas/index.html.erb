<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Solicitante</th>
      <th>Data</th>
      <th>Solicitante</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.solicitante %></td>
        <td><%= reserva.data %></td>
        <td><%= reserva.solicitante_id %></td>
        <td><%= reserva.descricao %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

